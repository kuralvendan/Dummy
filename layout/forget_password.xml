<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="6dp">


    <EditText
        android:id="@+id/et_forgetmobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:imeOptions="actionNext"
        android:hint="Mobile Number"
        android:textColor="@color/textcolor"
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp"
        android:textColorHint="@color/textcolor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textcolor" />



    <!-- Here you can replace it with your logo or brand name -->

            <EditText
                android:id="@+id/et_forgetemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/textcolor"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="@string/email"
                android:maxLines="1"
                android:padding="8dp"
                android:inputType="text"
                android:textColorHint="@color/textcolor" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textcolor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                >

                <Button
                    android:id="@+id/btn_forgetsubmit"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/newbutton"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:focusable="true"
                    tools:ignore="RtlHardcoded" />

                <ProgressBar
                    android:id="@+id/progress_d1bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center" />
                <Button
                    android:id="@+id/btn_forgetcancel"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@drawable/newbutton"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    tools:ignore="RtlHardcoded"
                    android:focusable="true" />

            </RelativeLayout>
</LinearLayout>