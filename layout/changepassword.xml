<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="6dp">

    <EditText
        android:id="@+id/et_d_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_local_phone_black_24dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="@string/mobile_no"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/textcolor"
        android:textColorHint="@color/textcolor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db" />




    <EditText
        android:id="@+id/et_d_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"

        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="@string/password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/textcolor"
        android:textColorHint="@color/textcolor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db" />


    <!-- Here you can replace it with your logo or brand name -->


    <EditText
        android:id="@+id/et_d_confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"

        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="@string/confirm_password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/textcolor"
        android:textColorHint="@color/textcolor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFCAC4B" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btn_changesubmit"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/newbutton"
            android:padding="5dp"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:textStyle="normal"
            android:gravity="center"
            tools:ignore="RtlHardcoded" />


        <ProgressBar
            android:id="@+id/progress_ddbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btn_d_forgetcancel"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="makecancel"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@drawable/newbutton"
            android:clickable="true"
            android:padding="5dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:textStyle="normal"
            tools:ignore="RtlHardcoded"
            android:focusable="true" />

    </RelativeLayout>




</LinearLayout>