<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="1dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="60dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/texttitle"-->
                <!--android:text="@string/title"-->
                <!--android:textSize="28sp"-->
                <!--android:textColor="#000000"-->
                <!--android:ellipsize="marquee"-->
                <!--android:fadingEdge="horizontal"-->
                <!--android:marqueeRepeatLimit="marquee_forever"-->
                <!--android:scrollHorizontally="true"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:freezesText="true"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:singleLine="true" />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/titleproducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/producttitle"
                    android:textColor="@color/black"
                    android:textSize="28sp" />
                <!--<GridView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/grid"-->
                <!--android:layout_below="@id/titleproducts"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:gravity="center"-->
                <!--android:numColumns="2"/>-->
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linlay1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ply_wood"
                        android:orientation="vertical"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ply_wood_im"
                                android:layout_width="180dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/ply" />
                            <TextView
                                android:id="@+id/ply_wood_tx"
                                android:layout_below="@+id/ply_wood_im"
                                android:text="@string/playwoods1"
                                android:gravity="center"
                                android:textSize="24sp"
                                android:textColor="@color/textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/hardware"
                        android:orientation="vertical"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/hardware_im"
                                android:layout_width="180dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/hard" />
                            <TextView
                                android:id="@+id/hardware_tx"
                                android:layout_below="@+id/hardware_im"
                                android:text="@string/hardwares1"
                                android:gravity="center"
                                android:textSize="24sp"
                                android:textColor="@color/textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linlay2"
                    android:layout_below="@+id/linlay1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/door"
                        android:orientation="vertical"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/door_im"
                                android:layout_marginTop="4dp"
                                android:layout_width="180dp"
                                android:layout_height="120dp"
                                android:src="@drawable/door" />
                            <TextView
                                android:id="@+id/door_tx"
                                android:layout_below="@+id/door_im"
                                android:text="@string/doors1"
                                android:gravity="center"
                                android:textSize="24sp"
                                android:textColor="@color/textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/modular_kitchen"
                        android:orientation="vertical"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/modular_kitchen_im"
                                android:layout_width="180dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/modular" />
                            <TextView
                                android:id="@+id/modular_kitchen_tx"
                                android:layout_below="@+id/modular_kitchen_im"
                                android:text="@string/modular_kitchen1"
                                android:gravity="center"
                                android:textSize="23sp"
                                android:textColor="@color/textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linlay3"
                    android:layout_below="@+id/linlay2"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/adhesive"
                        android:orientation="vertical"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/adhesive_im"
                                android:layout_width="180dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/adh" />
                            <TextView
                                android:id="@+id/adhesive_tx"
                                android:layout_below="@+id/adhesive_im"
                                android:text="@string/adhesives1"
                                android:gravity="center"
                                android:textSize="24sp"
                                android:textColor="@color/textcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_item" />
</RelativeLayout>